from apscheduler.schedulers.background import BackgroundScheduler
from lxml import etree
from urllib2 import urlopen

class Scripter():
    
    scheduler = None
    ScienceDaily = None


    def __init__(self):
        self.update()
        scheduler = BackgroundScheduler()
        scheduler.start()
        scheduler.add_job(self.update, 'interval', hours=1)
        
    def update(self):
        page = urlopen('http://feeds.sciencedaily.com/sciencedaily/top_news/top_technology?format=xml')
        xml = etree.parse(page.text)
        self.ScienceDaily = xml.get_root().find('channel')[0]
        
