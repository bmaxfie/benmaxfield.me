// By: Ben Maxfield
//	This script animates the console pieces not handled by the CSS3 animations.
//		Specifically, this handles:
//
//			* progress bar animation
//			* timed removal of top lines
//
// Note: Obviously, this is an incredibly long script for such a small animation. 
//			Therefore, 

$(document).ready(function(){
	
	setTimeout(cutBottom, 1);
	setTimeout(progressBar, 10900);
	setTimeout(toggle1, 20200);
	setTimeout(toggle2, 20600);
	setTimeout(toggle3, 21000);
	setTimeout(toggle4, 21000);
	setTimeout(toggle5, 21200);
	setTimeout(toggle6, 21200);
	setTimeout(toggle7, 21200);
	setTimeout(toggle8, 21200);
	
	function cutBottom(){
		$("#script27").hide();
		$("#script28").hide();
		$("#script29").hide();
		$("#space3").hide();
		$("#script30").hide();
		$("#script31").hide();
		$("#space4").hide();
		$("#script32").hide();
	}
	
	function progressBar(){
		setTimeout(progress0, 100);
		setTimeout(progress5, 200);
		setTimeout(progress10, 300);
		setTimeout(progress15, 400);
		setTimeout(progress20, 500);
		setTimeout(progress25, 600);
		setTimeout(progress30, 700);
		setTimeout(progress35, 800);
		setTimeout(progress40, 900);
		setTimeout(progress45, 1000);
		setTimeout(progress50, 1100);
		setTimeout(progress55, 1200);
		setTimeout(progress60, 1300);
		setTimeout(progress65, 1400);
		setTimeout(progress70, 1500);
		setTimeout(progress75, 1600);
		setTimeout(progress80, 1700);
		setTimeout(progress85, 1800);
		setTimeout(progress90, 1900);
		setTimeout(progress95, 2000);
		setTimeout(progress100, 2100);
	}
	function progress0(){
		$("#script4").empty().text("  0%|                    |").append("</br>");
	}
	function progress5(){
		$("#script4").empty().append("  5%|=                   |</br>");
	}
	function progress10(){
		$("#script4").empty().append(" 10%|==                  |</br>");
	}
	function progress15(){
		$("#script4").empty().append(" 15%|===                 |</br>");
	}
	function progress20(){
		$("#script4").empty().append(" 20%|====                |</br>");
	}
	function progress25(){
		$("#script4").empty().append(" 25%|=====               |</br>");
	}
	function progress30(){
		$("#script4").empty().append(" 30%|======              |</br>");
	}
	function progress35(){
		$("#script4").empty().append(" 35%|=======             |</br>");
	}
	function progress40(){
		$("#script4").empty().append(" 40%|========            |</br>");
	}
	function progress45(){
		$("#script4").empty().append(" 45%|=========           |</br>");
	}
	function progress50(){
		$("#script4").empty().append(" 50%|==========          |</br>");
	}
	function progress55(){
		$("#script4").empty().append(" 55%|===========         |</br>");
	}
	function progress60(){
		$("#script4").empty().append(" 60%|============        |</br>");
	}
	function progress65(){
		$("#script4").empty().append(" 65%|=============       |</br>");
	}
	function progress70(){
		$("#script4").empty().append(" 70%|==============      |</br>");
	}
	function progress75(){
		$("#script4").empty().append(" 75%|===============     |</br>");
	}
	function progress80(){
		$("#script4").empty().append(" 80%|================    |</br>");
	}
	function progress85(){
		$("#script4").empty().append(" 85%|=================   |</br>");
	}
	function progress90(){
		$("#script4").empty().append(" 90%|==================  |</br>");
	}
	function progress95(){
		$("#script4").empty().append(" 95%|=================== |</br>");
	}
	function progress100(){
		$("#script4").empty().append("100%|====================|</br>");
	}
	
	
	function toggle1(){
		$("#script27").show();
		$("#script1").hide();
	}
	function toggle2(){
		$("#script28").show();
		$("#script2").hide();
	}
	function toggle3(){
		$("#script29").show();
		$("#script3").hide();
	}
	function toggle4(){
		$("#space3").show();
		$("#script4").hide();
	}
	function toggle5(){
		$("#script30").show();
		$("#script5").hide();
	}
	function toggle6(){
		$("#script31").show();
		$("#space1").hide();
	}
	function toggle7(){
		$("#space4").show();
		$("#script6").hide();
	}
	function toggle8(){
		$("#script32").show();
		$("#script7").hide();
	}
});